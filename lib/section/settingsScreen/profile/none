import 'package:demo_project/db/functions/db_functions.dart';
import 'package:flutter/material.dart';   
import 'package:hive_flutter/hive_flutter.dart';
import '../../../db/model/date_modal.dart';

class Profile extends StatelessWidget {
  const Profile({super.key});

  @override
  Widget build(BuildContext context) {
    return ValueListenableBuilder(
      valueListenable: loginListNotifier,
      builder: (BuildContext ctx, List<LoginModal> loginList, Widget? child) {
        return ListView.separated(
          itemBuilder: (ctx, index) {
            final data = loginList[index];
            return ListTile(
              title: Text(data.name),
              subtitle: Text(data.email),
            );
          },
          separatorBuilder: (ctx, index) {
            return Divider();
          },
          itemCount: loginList.length,
        );
      },
    );
  }
}
